<Page x:Class="WPF_SQL.AdminCab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SQL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminCab">

    <Grid HorizontalAlignment="Center" Width="200">
        <StackPanel>
            <TextBlock Text="Меню" FontSize="20" FontFamily="Times New Roman" FontStyle="Italic" HorizontalAlignment="Center"/>
            <Border BorderBrush="Azure" BorderThickness="2" CornerRadius="5" Padding="10,0,10,5">
                <StackPanel Margin="0,10,0,10">
                    <Button Name="Bdatausers" Content="Данные о пользователях" Margin="0,5,0,5" Click="Bdatausers_Click"/>
                    <Button Name="Bexit" Content="Выход" Margin="0,5,0,5" Click="Bexit_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>
