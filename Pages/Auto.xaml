<Page x:Class="WPF_SQL.Auto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SQL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auto">

    <Grid HorizontalAlignment="Center" Width="150">

        <StackPanel>
            <TextBlock Text="Вход" FontSize="20" FontFamily="Times New Roman" FontStyle="Italic" HorizontalAlignment="Center"/>
            <Border BorderBrush="Azure" BorderThickness="2" CornerRadius="5" Padding="10,0,10,5">
                <StackPanel>
                    <TextBlock Text="Введите логин"/>
                    <TextBox Name="TBOXlogin"></TextBox>

                    <TextBlock Text="Введите пароль"/>
                    <PasswordBox Name="PBOXpassword" ></PasswordBox>
                </StackPanel>
            </Border>
            <Button Name="Breg" Content="Войти" Margin="0,10,0,10" Click="Breg_Click"/>
            <Label Name="Lback" Style="{StaticResource Slableback}" Content="Вернуться обратно" MouseLeftButtonDown="Lback_MouseLeftButtonDown"/>
        </StackPanel>

    </Grid>
</Page>
